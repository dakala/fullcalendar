function fullcalendar_theme() {
  return array(
    'fullcalendar_classname' => array(
      'variables' => array('node' => NULL),
    ),
    'fullcalendar_link' => array(
      'variables' => array(
        'node' => NULL,
        'attributes' => NULL,
        'index' => NULL,
      ),
